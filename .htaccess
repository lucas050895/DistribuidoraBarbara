# Activar mod_rewrite
RewriteEngine On

# 1) Bloquear /config/
RewriteRule ^config/ - [F,L]

# 2) Bloquear /php/pages/ excepto dashboard.php
RewriteCond %{REQUEST_URI} !^/DistribuidoraBarbara/php/pages/dashboard\.php$ [NC]
RewriteRule ^php/pages/ - [F,L]

# 3) Bloquear /php/pages/layout/
RewriteRule ^php/pages/layout/ - [F,L]

# 4) Bloquear /assets/js/
RewriteRule ^assets/js/ - [F,L]

